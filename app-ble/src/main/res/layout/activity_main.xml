<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.afirez.ble.MainActivity">

    <TextView
        android:id="@+id/ble_tv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="scan"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/ble_et_address"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="68:9A:E1:10:01:6C"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ble_tv_connect"
        app:layout_constraintTop_toBottomOf="@+id/ble_tv_scan"/>

    <TextView
        android:id="@+id/ble_tv_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="connect"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ble_et_address"
        app:layout_constraintLeft_toRightOf="@+id/ble_et_address"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ble_et_address"/>

    <com.afirez.ble.BloodPressureSurfaceView
        android:id="@+id/ble_sv_blood_pressure"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</android.support.constraint.ConstraintLayout>
