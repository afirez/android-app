<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context="com.afirez.camera.MainActivity">

    <SurfaceView
        android:id="@+id/camera_sv_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/camera_tv_switch_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTvSwitchCamera"
        android:padding="10dp"
        android:textColor="#00ff00"
        android:text="switch camera"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/camera_tv_camera_mirror"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/camera_tv_camera_mirror"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTvCameraMirror"
        android:padding="10dp"
        android:textColor="#00ff00"
        android:text="mirror"
        app:layout_constraintLeft_toRightOf="@+id/camera_tv_switch_camera"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/camera_tv_start_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onTvStartCameraPreview"
        android:padding="10dp"
        android:textColor="#00ff00"
        android:text="start camera preview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_tv_switch_camera"/>


    <TextView
        android:id="@+id/camera_tv_stop_preview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#00ff00"
        android:onClick="onTvStopCameraPreview"
        android:text="stop camera preview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_tv_start_preview"/>

    <TextView
        android:id="@+id/camera_tv_set_preview_callback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#00ff00"
        android:onClick="onTvSetCameraPreviewCallback"
        android:text="set preview callback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_tv_stop_preview"/>

    <TextView
        android:id="@+id/camera_tv_set_one_shot_preview_callback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#00ff00"
        android:onClick="onTvSetCameraOneShotPreviewCallback"
        android:text="set one shot preview callback"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_tv_set_preview_callback"/>

    <TextView
        android:id="@+id/camera_tv_set_preview_callback_with_buffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#00ff00"
        android:onClick="onTvSetCameraPreviewCallbackWithBuffer"
        android:text="set preview callback with buffer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_tv_set_one_shot_preview_callback"/>

    <TextView
        android:id="@+id/camera_tv_add_callback_buffer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:textColor="#00ff00"
        android:onClick="onTvAddCameraCallbackBuffer"
        android:text="add buffer"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/camera_tv_set_preview_callback_with_buffer"/>

</android.support.constraint.ConstraintLayout>
